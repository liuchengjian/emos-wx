.container {
  display: flex;
  flex-direction: column;
}
.container .camera-box {
  width: 100%;
  height: 400px;
}
.container .camera-box .camera {
  width: 100%;
  height: 100%;
}
.container .camera-box .image {
  width: 100%;
  height: 100%;
}
.container .operate-container {
  display: flex;
  justify-content: center;
  margin-top: 50rpx;
}
.container .operate-container .btn {
  width: 40%;
  margin: 0;
}
.container .operate-container .btn:first-child {
  margin-right: 30rpx;
}
.container .notice-container {
  padding: 40rpx 60rpx;
}
.container .notice-container .notice {
  font-size: 40rpx;
  color: #333;
  font-weight: bold;
  display: block;
  margin-bottom: 15rpx;
}
.container .notice-container .desc {
  display: block;
  font-size: 32rpx;
  color: #999;
  line-height: 1.6;
}

