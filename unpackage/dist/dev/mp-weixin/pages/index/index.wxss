page {
  background-color: #eeeef4;
}
.container .swiper {
  height: 200px;
}
.container .swiper image {
  width: 100%;
}
.container .notify-container {
  padding: 5px;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  margin-bottom: 10px;
}
.container .notify-container .notify-title {
  display: flex;
  align-items: center;
  flex-direction: row;
}
.container .notify-container .notify-title .notify-icon {
  margin-right: 5px;
  width: 14px;
}
.container .notify-container .notify-content {
  font-size: 14px;
  color: #333;
}
.container .notify-container .notify-content:before {
  display: inline-block;
  content: "";
  width: 12rpx;
  height: 12rpx;
  border: 6rpx;
  background-color: red;
  margin-left: 18px;
  margin-right: 7px;
  vertical-align: 3rpx;
}
.container .notify-container .more-icon {
  position: absolute;
  top: 215px;
  right: 0px;
  width: 30px;
}
.container .nav-container {
  background-color: #fff;
  margin-bottom: 10px;
  padding: 8px 10px;
}
.container .nav-container .nav-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20px;
}
.container .nav-container .nav-row .nav {
  text-align: center;
}
.container .nav-container .nav-row .nav .icon {
  width: 40px;
}
.container .nav-container .nav-row .nav .name {
  display: block;
  font-size: 14px;
  color: #333;
}

